<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/replyButton"
        style="@style/Widget.Button.CustomOutlinedButton"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/reply"
        app:icon="@drawable/ic_baseline_reply_24"
        app:iconSize="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/replyAllButton"
        style="@style/Widget.Button.CustomOutlinedButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/reply_all"

        app:icon="@drawable/ic_baseline_reply_all_24"
        app:iconSize="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/forwardButton"
        style="@style/Widget.Button.CustomOutlinedButton"
        android:layout_width="145dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-25dp"
        android:layout_marginLeft="-25dp"
        android:layout_toEndOf="@+id/replyAllButton"
        android:layout_toRightOf="@+id/replyAllButton"
        android:text="@string/forward"
        app:icon="@drawable/ic_baseline_arrow_forward_24"
        app:iconSize="16dp" />

</RelativeLayout>