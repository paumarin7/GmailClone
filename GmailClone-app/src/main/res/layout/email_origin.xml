<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/originProfilePicture"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_toRightOf="@+id/originProfilePicture"
        style="@style/email_origin"
        android:layout_toEndOf="@+id/originProfilePicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/address"
        android:id="@+id/dateTextView"

        android:layout_toEndOf="@+id/address" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        app:icon="@drawable/ic_baseline_reply_24"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/originReplyButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_toLeftOf="@id/optionsButton"
        android:layout_toStartOf="@id/optionsButton" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionsButton"
        android:layout_alignParentRight="true"/>



</RelativeLayout>