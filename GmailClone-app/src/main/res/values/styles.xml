<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/interfaceColor</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/unreadColor</item>
    </style>
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <style name="email_origin">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="email_subject">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="email_body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/readColor</item>
    </style>
    <style name="interfaceItem">
        <item name="color">@color/selectedColor</item>
        <item name="tint">@color/selectedColor</item>
        <item name="backgroundTint">@color/interfaceColor</item>
    </style>

</resources>