<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/interfaceColor</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/unreadColor</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>

        <item name="colorStateNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemNormal">@color/unreadColor</item>
        <item name="colorNavigationItemSelected">@color/selectedColor</item>
        <item name="colorNavigationItemBackgroundSelected">@color/don_juan</item>
        <item name="colorNavigationItemBackgroundPressed">@color/interfaceColor</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_item_background_color_state</item>
        <item name="android:listDivider">@color/readColor</item>

    </style>

    <!-- NAVIGATION DRAWER THEMES -->
    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorStateNavigationItem</item>
        <item name="itemTextAppearance">@style/TextAppearance.Custom.Navigation.Item</item>
        <item name="itemTextColor">?attr/colorStateNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>
    <style name="TextAppearance.Custom.Navigation.Item" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/unreadColor</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- OTHER STUFF -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="email_origin">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="email_subject">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="email_body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/readColor</item>
    </style>

    <style name="interfaceItem">
        <item name="color">@color/selectedColor</item>
        <item name="tint">@color/selectedColor</item>
        <item name="backgroundTint">@color/interfaceColor</item>
        <item name="android:textColor">@color/interfaceColor</item>
    </style>

    <style name="bottomBarColor">
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
        <item name="backgroundTint">@color/interfaceColor</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
    </style>

</resources>